    <script>
        /**
         * MATH UTILS
         */
        const lerp = (start, end, t) => start * (1 - t) + end * t;
        const clamp = (val, min, max) => Math.min(Math.max(val, min), max);
        const random = (min, max) => Math.random() * (max - min) + min;

        /**
         * SYSTEM 1: BACKGROUND BUBBLES (Canvas)
         * Renders floating "Aether" bubbles that slowly drift.
         */
        class BackgroundSystem {
            constructor() {
                this.canvas = document.getElementById('bg-canvas');
                this.ctx = this.canvas.getContext('2d');
                this.orbs = [];
                this.width = 0; 
                this.height = 0;
                
                this.resize();
                this.initOrbs();
                window.addEventListener('resize', () => this.resize());
                
                // Start Loop
                this.animate();
            }

            resize() {
                this.width = window.innerWidth;
                this.height = window.innerHeight;
                this.canvas.width = this.width;
                this.canvas.height = this.height;
            }

            initOrbs() {
                this.orbs = [];
                // Create 15 floating orbs
                for(let i = 0; i < 15; i++) {
                    this.orbs.push({
                        x: random(0, this.width),
                        y: random(0, this.height),
                        radius: random(20, 100),
                        vx: random(-0.2, 0.2),
                        vy: random(-0.2, 0.2),
                        color: Math.random() > 0.6 ? 
                            'rgba(124, 58, 237, 0.15)' :  // Violet
                            'rgba(6, 182, 212, 0.1)'      // Cyan
                    });
                }
            }

            animate() {
                this.ctx.clearRect(0, 0, this.width, this.height);
                
                this.orbs.forEach(orb => {
                    // Move
                    orb.x += orb.vx;
                    orb.y += orb.vy;

                    // Wrap around screen
                    if(orb.x < -100) orb.x = this.width + 100;
                    if(orb.x > this.width + 100) orb.x = -100;
                    if(orb.y < -100) orb.y = this.height + 100;
                    if(orb.y > this.height + 100) orb.y = -100;

                    // Draw (Soft blurred circle)
                    this.ctx.beginPath();
                    this.ctx.arc(orb.x, orb.y, orb.radius, 0, Math.PI * 2);
                    this.ctx.fillStyle = orb.color;
                    this.ctx.filter = 'blur(30px)'; // Heavy CSS filter for atmosphere
                    this.ctx.fill();
                    this.ctx.filter = 'none'; // Reset
                });

                requestAnimationFrame(() => this.animate());
            }
        }

        /**
         * SYSTEM 2: VISUALIZER (The Halo)
         * Draws the ring around the headphones in section 2.
         */
        class AudioVisualizer {
            constructor() {
                this.canvas = document.getElementById('viz-canvas');
                this.ctx = this.canvas.getContext('2d');
                this.active = false;
                this.time = 0;
                
                this.resize();
                window.addEventListener('resize', () => this.resize());
            }

            resize() {
                this.canvas.width = window.innerWidth;
                this.canvas.height = window.innerHeight;
            }

            render() {
                if(!this.active) {
                    this.ctx.clearRect(0, 0, this.canvas.width, this.canvas.height);
                    return;
                }

                this.time += 0.05;
                const w = this.canvas.width;
                const h = this.canvas.height;
                const cx = w / 2;
                const cy = h / 2 - 50; // Offset slightly up to match headphone center

                this.ctx.clearRect(0, 0, w, h);
                
                // Draw multiple rings
                for(let r = 0; r < 3; r++) {
                    this.ctx.beginPath();
                    for(let i = 0; i <= 100; i++) {
                        const angle = (Math.PI * 2 * i) / 100;
                        // Noise function simulation using sine waves
                        const noise = Math.sin(angle * 10 + this.time + r) * Math.cos(angle * 5 - this.time) * 15;
                        const rad = 180 + (r * 20) + noise;
                        
                        const x = cx + Math.cos(angle) * rad;
                        const y = cy + Math.sin(angle) * rad;
                        
                        if(i===0) this.ctx.moveTo(x, y);
                        else this.ctx.lineTo(x, y);
                    }
                    this.ctx.closePath();
                    this.ctx.strokeStyle = r === 1 ? 'rgba(6, 182, 212, 0.5)' : 'rgba(124, 58, 237, 0.3)';
                    this.ctx.lineWidth = 2;
                    this.ctx.stroke();
                }
            }
        }

        /**
         * SYSTEM 3: PRODUCT PHYSICS
         * Controls the 3D CSS Headphone position and transition logic.
         */
        class ProductRig {
            constructor() {
                this.el = document.getElementById('rig-anchor');
                this.chassis = this.el.querySelector('.hp-chassis');
                
                // Position State
                this.state = {
                    x: 25, y: -50, scale: 1.1, rotate: -25, opacity: 1
                };
                
                this.target = { ...this.state };
            }

            setHero() {
                // Right side, angled
                this.target = { x: 25, y: -50, scale: 1.1, rotate: -25, opacity: 1 };
                this.chassis.classList.remove('mode-active');
            }

            setImmersion() {
                // Center, looking straight
                this.target = { x: -50, y: -60, scale: 0.85, rotate: 0, opacity: 1 };
                this.chassis.classList.add('mode-active');
            }

            setHidden() {
                // Fade out/scale down for bottom sections
                this.target = { x: -50, y: -80, scale: 0.5, rotate: 10, opacity: 0 };
            }

            update() {
                // Physics Lerp
                this.state.x = lerp(this.state.x, this.target.x, 0.05);
                this.state.y = lerp(this.state.y, this.target.y, 0.05);
                this.state.scale = lerp(this.state.scale, this.target.scale, 0.05);
                this.state.rotate = lerp(this.state.rotate, this.target.rotate, 0.05);
                this.state.opacity = lerp(this.state.opacity, this.target.opacity, 0.05);

                // Apply
                this.el.style.transform = `
                    translate3d(${this.state.x}vw, ${this.state.y}%, 0)
                    scale(${this.state.scale})
                `;
                this.el.style.opacity = this.state.opacity;
                this.chassis.style.transform = `translate(-50%, -50%) rotate(${this.state.rotate}deg)`;
            }
        }

        /**
         * SYSTEM 4: MASTER DIRECTOR
         * Orchestrates scrolling, sections, and loop.
         */
        class Director {
            constructor() {
                this.bg = new BackgroundSystem();
                this.viz = new AudioVisualizer();
                this.rig = new ProductRig();
                
                this.sections = {
                    hero: document.getElementById('sec-hero'),
                    exp: document.getElementById('sec-experience'),
                    specs: document.getElementById('sec-specs'),
                    form: document.getElementById('sec-reservation')
                };

                this.initScrollListener();
                this.loop();
            }

            initScrollListener() {
                window.addEventListener('scroll', () => {
                    const scrollY = window.scrollY;
                    const h = window.innerHeight;
                    
                    // Simple zone detection
                    if (scrollY < h * 0.5) {
                        this.rig.setHero();
                        this.viz.active = false;
                    } else if (scrollY >= h * 0.5 && scrollY < h * 1.5) {
                        this.rig.setImmersion();
                        this.viz.active = true;
                    } else {
                        this.rig.setHidden();
                        this.viz.active = false;
                    }
                });
            }

            loop() {
                this.rig.update();
                this.viz.render();
                requestAnimationFrame(() => this.loop());
            }
        }

        // --- BOOT ---
        document.addEventListener('DOMContentLoaded', () => {
            const app = new Director();
            console.log("AETHER SYSTEM ONLINE ///");
        });

    </script>
</body>
</html>
